{
  "version": 2,
  "builds": [
    {
      "src": "*.{html,js,css,json}",
      "use": "@vercel/static"
    },
    {
      "src": "Videos/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/Videos/(.*)", "headers": { "Content-Type": "video/mp4" }, "dest": "/Videos/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "buildCommand": "git lfs pull",
  "installCommand": "git lfs install && git lfs pull"
}
