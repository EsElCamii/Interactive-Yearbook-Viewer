{
  "version": 2,
  "builds": [
    {
      "src": "**/*.{js,html,css,json}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/Videos/(.*\\.mp4)",
      "headers": {
        "Content-Type": "video/mp4",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(js|css|json|html|ico|png|jpg|jpeg|gif|svg))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "git lfs pull",
  "installCommand": "git lfs install && git lfs pull"
}
